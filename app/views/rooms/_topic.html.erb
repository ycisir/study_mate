<h5>Browse by topics</h5>

<ul class="list-group">
  <% unless @topics.empty? %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to "All", root_url, class: "text-decoration-none text-dark" %>
      <span class="badge text-bg-secondary rounded-pill"><%= Room.count %></span>
    </li>
    <% @topics.each do |topic| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to topic.name, "#{root_url}rooms?q=#{topic.name}", class: "text-decoration-none text-dark" %>
        <span class="badge text-bg-secondary rounded-pill"><%= topic.rooms.count %></span>
      </li>
    <% end %>
  <% else %>
    <p class="text-danger mt-3">No topics found!</p>
  <% end %>
</ul>