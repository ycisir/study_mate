<%= form_with model: @room do |form| %>
  <div class="form-group mb-3">
    <%= form.label "Room name" %>
    <%= form.text_field :name, class: "form-control" %>
    <% @room.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div class="form-group mb-3">
    <%= form.label "Room topic" %>
    <%= form.text_field :topic_name, class: "form-control" %>
    <% @room.errors.full_messages_for(:topic_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group mb-3">
    <%= form.label "Room description" %>
    <%= form.text_area :desc, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Create", class: "btn btn-success" %>
  </div>


<% end %>