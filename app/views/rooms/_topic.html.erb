<h5>Recent Topics</h5>

<ul class="list-group">
	<li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to "All", root_url, class: "text-decoration-none text-dark" %>
    <span class="badge text-bg-secondary rounded-pill"><%= Room.count %></span>
  </li>
	<% @topics.each do |topic| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to topic.name, "#{root_url}?q=#{topic.name}", class: "text-decoration-none text-dark" %>
      <span class="badge text-bg-secondary rounded-pill"><%= topic.rooms.count %></span>
    </li>
  <% end %>
</ul>